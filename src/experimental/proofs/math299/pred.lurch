          { :Let b
            { :¬(∃z.¬P(a,b,z))
              { :Let c
                { :¬P(a,b,c)
                  ∃z.¬P(a,b,z)
                  →←
                }
                P(a,b,c)
              }
              ∀z.P(a,b,z)
              ∃y.∀z.P(a,y,z)
              →←
            }
            ∃z.¬P(a,b,z)
          }
          ∀y.∃z.¬P(a,y,z)
          ∃x.∀y.∃z.¬P(x,y,z)
          →←
        }
        ∃y.∀z.P(a,y,z)
      }
      ∀x.∃y.∀z.P(x,y,z)
      →←
    }
