  { (∃!x.P(x)) ⇔ (∃x.P(x) and (∀y.¬y=x ⇒ ¬P(y))) }
  ➤ "Proof:"
  Proof:
  { { :∃!x.P(x)
      ∃x.(P(x) and (∀y.P(y) ⇒ y=x))
      P(c) and (∀y.P(y) ⇒ y=c) for some c
      P(c)
      ∀y.P(y) ⇒ y=c
      { :Let z 
        { :¬z=c
          { :P(z)
            P(z) ⇒ z=c
            z=c
            →←
          }
          ¬P(z)
        }
        ¬z=c ⇒ ¬P(z)
      }
      ∀y. ¬y=c ⇒ ¬P(y)
      P(c) and (∀y.¬y=c ⇒ ¬P(y))
      ∃x. P(x) and (∀y.(¬y=x ⇒ ¬P(y)))
    }
    
    { :∃x. P(x) and (∀y.(¬y=x ⇒ ¬P(y)))
      P(c) and (∀y.(¬y=c ⇒ ¬P(y))) for some c
      P(c) 
      ∀y. ¬y=c ⇒ ¬P(y)
      { :Let z 
        { :P(z) 
          ¬z=c ⇒ ¬P(z)
          { :¬z=c
            ¬P(z)
            →←
          }
          z=c
        }
        P(z) ⇒ z=c
      }
      ∀y.P(y) ⇒ y=c
      P(c) and (∀y.P(y) ⇒ y=c)
      (∃x. P(x) and (∀y.P(y) ⇒ y=x))
      ∃!x. P(x) 
    }
  }
