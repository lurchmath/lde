// global constants 
(∧ ∨ ⇒ ⇔ ¬ ∀ ∃ =),{

  // ND Prop rule library
  :{ :W :V  (∧ W V) }               \label{∧+}
  :{ :(∧ W V) W V }                 \label{∧-}
  :{ :W  (∨ W V) (∨ V W) }          \label{∨+}
  :{ :(∨ W V) :{:W U} :{:V U}  U }  \label{∨-}
  :{ :{:W V}  (⇒ W V) }             \label{⇒+}
  :{ :W :(⇒ W V)  V }               \label{⇒-}
  :{ :{:W V} :{:V W}  (⇒ W V) }     \label{⇔+}
  :{ :(⇔ W V)  {:W V} {:V W} }      \label{⇔-}
  :{ :{:W V (¬ V)}  (¬ W) }         \label{¬+}
  :{ :{:(¬ W) V (¬ V)}  W }         \label{¬-}
  
  // Corollary:  (should be invalid here)
  { :(¬ (∨ A B))  :(∨ (⇒ A C) (∨ A B))  (⇒ A C) \invalid{} } 
  
  // blatant instantiation hints
  { :{ :(¬ P) Q (¬ Q)}  P \valid{} }          \ref{\¬-}
  { :(∨ P Q) :{ :P P } :{:Q P} P \valid{} }   \ref{∨-}
  // this is too soon
  { :(¬ (∨ A B))  :(∨ (⇒ A C) (∨ A B))  (⇒ A C) \invalid{} } \ref{alt or-}
  
  // Corollary:  (should also be invalid here)
  { :(¬ (∨ A B))  :(∨ (⇒ A C) (∨ A B))  (⇒ A C) \invalid{} }
  
  // Theorem (alt or-)
  { :(∨ P Q) :(¬ Q) P \valid{} }  \label{alt or-}

  // Altertnate or- proof (not needed but motivates the instantiations
  {
    { :(∨ P Q) 
      :(¬ Q)
      { :P
        P               \valid{} // no instantiation needed
      }
      { :Q
        { :(¬ P)
          (¬ Q)         \valid{} // no instantiation needed
        }
        P               \valid{} // motivates ¬- instantiation
      }
      P                 \valid{} // motivates or- instantiation
    }

   // now a blatant instantiation hint for the theorem
   { :(¬ (∨ A B))  :(∨ (⇒ A C) (∨ A B))  (⇒ A C) \valid{} } \ref{alt or-}

   // Corollary:
   { :(¬ (∨ A B))  :(∨ (⇒ A C) (∨ A B))  (⇒ A C) \valid{} } 

